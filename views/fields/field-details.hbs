<div class="container mt-5">
    <div class="row justify-content-between">
        <h1 class="col-md-6">{{field.name}}</h1>
        <div class="col-md-3 row justify-content-around">
            <div class="col-md-6">
                {{#if permissions}}
                    <a href="/campos/editar/{{field._id}}" class="btn btn-outline-success mt-2">Editar Campo</a>
                {{/if}}
            </div>
            <div class="col-md-6">
                {{#if permissions}}
                    <a href="/partidos/crear/{{field._id}}" class="btn btn-success mt-2">Crear Partido</a>
                {{/if}}
            </div>
        </div>
    </div>
    <hr>

    <div class="row justify-content-between mt-5">
        
        {{#each matches}}
        <div class="card col-6 shadow-lg mb-5 bg-body-tertiary rounded" style="width: 19rem;">
            <div class="card-body">
                <h5 class="card-title">{{date}}</h5>
                <a href="/partidos/detalles/{{_id}}" class="btn btn-success">Detalles</a>
                {{#if ../permissions}}
                    <a href="/partidos/editar/{{_id}}" class="btn btn-outline-success">Editar</a>
                    <a href="/partidos/borrar/{{_id}}" class="btn btn-outline-danger">Eliminar</a>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>