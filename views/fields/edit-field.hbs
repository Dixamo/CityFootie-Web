<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <h1>Editar {{name}}</h1>
            <hr>
            <form action="/campos/editar/{{_id}}" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="name" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitud</label>
                    <input type="latitude" class="form-control" id="latitude" name="latitude" value="{{location.coordinates.[0]}}">
                </div>
                <div class="mb-3">
                    <label for="longitude" class="form-label">Longitud</label>
                    <input type="longitude" class="form-control" id="longitude" name="longitude" value="{{location.coordinates.[1]}}">
                </div>

                {{#if errorMessage}}
                <p id="error">{{errorMessage}}</p>
                {{/if}}

                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-outline-success">Editar</button>
                </div>
            </form>
        </div>
    </div>
</div>