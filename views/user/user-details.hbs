<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 mt-5">
            <div class="row justify-content-between align-items-center">
                <h1 class="col-md-6">{{user.username}}</h1>
                {{#if owner}}
                <div class="col-md-2">
                    <a href="/usuarios/editar/{{user._id}}" class="btn btn-outline-success mt-1">Editar</a>
                </div>
                {{/if}}
            </div>
            <hr>
            <div class="row justify-content-center">
                <div class="col-md-6 mt-3 text-center">
                    <img src="{{user.cover}}" alt="" class="img-fluid">
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6 mt-3">
                    <ul class="list-group">
                        <li class="list-group-item">Email: {{user.email}}</li>
                        <li class="list-group-item">Rol: {{user.role}}</li>
                    </ul>
                </div>
            </div>
            <div class="row justify-content-end">
               <div class="col-md-3 mt-3">
                  <a class="btn btn-outline-danger mt-1" href="/cerrar-sesion">Cerrar Sesion</a>
               </div>
                {{#if organizer}}
                    <div class="col-md-2 mt-3">
                        <a href="/usuarios/borrar/{{user._id}}" class="btn btn-danger mt-1">Eliminar</a>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="row">
        {{#each matches}}
            <div class="card col-3 shadow-lg bg-body-tertiary rounded m-5" style="width: 19rem;">
                <div class="card-body">
                    <h5 class="card-title">{{date}}</h5>
                    <a href="/partidos/detalles/{{_id}}" class="btn btn-success">Detalles</a>
                    {{#if permissions}}
                        <a href="/partidos/editar/{{_id}}" class="btn btn-outline-success">Editar</a>
                        <a href="/partidos/borrar/{{_id}}" class="btn btn-outline-danger">Eliminar</a>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
</div>