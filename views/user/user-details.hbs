<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="row justify-content-between align-items-center">
                <h1 class="col-md-6">{{user.username}}</h1>
                {{#if owner}}
                <div class="col-md-2">
                    <a href="/usuarios/editar/{{user._id}}" class="btn btn-outline-success mt-1">Editar</a>
                </div>
                {{/if}}
            </div>
            <hr>
            <div class="row justify-content-center">
                <div class="col-md-6 mt-3 text-center">
                    <img src="{{user.cover}}" alt="" class="img-fluid">
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6 mt-3">
                    <ul class="list-group">
                        <li class="list-group-item">Email: {{user.email}}</li>
                        <li class="list-group-item">Rol: {{user.role}}</li>
                    </ul>
                </div>
            </div>

            {{#if organizer}}
            <div class="row justify-content-end">
                <div class="col-md-2 mt-5">
                    <a href="/usuarios/borrar/{{user._id}}" class="btn btn-outline-danger mt-1">Eliminar</a>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>