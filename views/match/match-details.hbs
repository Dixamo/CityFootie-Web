<div class="container mt-5">
    <div class="row justify-content-between">
        <h1 class="col-md-6">{{match.field.name}}, {{date}}</h1>
        <div class="col-md-2 row justify-content-around">
            <div class="col-md-6">
                <form action="/partidos/anadir/{{match._id}}" method="post">
                    <div>
                        <button type="submit" class="btn btn-outline-success mt-2">Unirte</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <form action="/partidos/quitar/{{match._id}}" method="post">
                    <div>
                        <button type="submit" class="btn btn-outline-danger mt-2">Salirte</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
    {{#each match.assistants}}
        <div class="card col-6 shadow-lg p-3 mb-5 bg-body-tertiary rounded m-3" style="width: 19rem;">
            <div class="card-body text-center">
                    <img src="{{cover}}" alt="" class="img-fluid">
            </div>
            <div class="card-body">
                <h5 class="card-title">{{username}}</h5>
                <a href="/usuarios/detalles/{{_id}}" class="btn btn-outline-success">Ver Perfil</a>
            </div>
        </div>
    {{/each}}
    </div>
</div>